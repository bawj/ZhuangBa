<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/tool_lib_8dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAuthenticationClose"
            android:layout_width="@dimen/tool_lib_24dp"
            android:layout_height="@dimen/tool_lib_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/tool_lib_16dp"
            android:layout_marginEnd="@dimen/tool_lib_16dp"
            android:layout_marginRight="@dimen/tool_lib_16dp"
            android:src="@drawable/ic_combined_shape_close" />

        <ImageView
            android:id="@+id/ivAuthenticationLog"
            android:layout_width="@dimen/tool_lib_50dp"
            android:layout_height="@dimen/tool_lib_50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/tool_lib_30dp"
            android:src="@drawable/ic_shape_log" />

        <TextView
            android:id="@+id/tvAuthenticationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivAuthenticationLog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/tool_lib_29dp"
            android:textColor="@color/tool_lib_gray_333333"
            android:textSize="@dimen/tool_lib_18sp"
            tools:text="您已选择雇主帐号" />

        <TextView
            android:id="@+id/tvAuthenticationContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAuthenticationTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/tool_lib_8dp"
            android:gravity="center"
            android:textColor="@color/tool_lib_gray_333333"
            android:textSize="@dimen/tool_lib_14sp"
            tools:text="该帐号只能展示雇主功能是否继续？" />

        <View
            android:id="@+id/view"
            style="@style/tool_lib_horizontal_line"
            android:layout_below="@+id/tvAuthenticationContent"
            android:layout_marginTop="@dimen/tool_lib_12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_lib_43dp"
            android:layout_below="@+id/view">

            <TextView
                android:id="@+id/tvDialogVersionOk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/continues"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_14sp" />

            <View
                android:id="@+id/viewVerticalLine"
                style="@style/tool_lib_vertical_line" />

            <TextView
                android:id="@+id/tvDialogVersionClose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/close"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_14sp" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>