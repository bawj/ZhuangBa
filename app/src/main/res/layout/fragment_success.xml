<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tool_lib_gray_F5F6FA"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/tool_lib_43dp"
        android:src="@drawable/bg_success" />

    <TextView
        android:id="@+id/tvCompleteTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/tool_lib_66dp"
        android:layout_marginTop="@dimen/tool_lib_4dp"
        android:layout_marginRight="@dimen/tool_lib_66dp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/tool_lib_2dp"
        android:text="@string/apply_success_tip"
        android:textColor="@color/tool_lib_gray_303343"
        android:textSize="@dimen/tool_lib_16sp" />

    <Button
        android:id="@+id/btnCompleteMissionDetails"
        style="@style/base_btn"
        android:layout_marginLeft="@dimen/tool_lib_16dp"
        android:layout_marginTop="@dimen/tool_lib_30dp"
        android:layout_marginRight="@dimen/tool_lib_16dp"
        android:text="@string/view_the_tipping_history" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btnCompleteBackHome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_lib_46dp"
        android:layout_marginLeft="@dimen/tool_lib_16dp"
        android:layout_marginTop="@dimen/tool_lib_10dp"
        android:layout_marginRight="@dimen/tool_lib_16dp"
        android:text="@string/back_to_home_page"
        android:textColor="@color/tool_lib_gray_222222"
        app:qmui_backgroundColor="@android:color/white"
        app:qmui_borderColor="@android:color/white"
        app:qmui_isRadiusAdjustBounds="true" />
</LinearLayout>