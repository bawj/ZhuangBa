<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshBaseList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:srlAccentColor="@android:color/white"
        app:srlEnableHeaderTranslationContent="false"
        app:srlEnableLoadMore="false"
        app:srlPrimaryColor="@color/colorPrimary">

        <com.scwang.smartrefresh.header.MaterialHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvBaseList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/layInvitedMembers"
                android:background="@color/tool_lib_gray_F5F8FA"
                android:paddingTop="@dimen/tool_lib_12dp" />

            <LinearLayout
                android:id="@+id/layInvitedMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/white">

                <com.qmuiteam.qmui.layout.QMUIButton
                    android:id="@+id/btnAddTask"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tool_lib_46dp"
                    android:layout_margin="@dimen/tool_lib_8dp"
                    android:layout_marginLeft="@dimen/tool_lib_16dp"
                    android:layout_marginTop="@dimen/tool_lib_46dp"
                    android:layout_marginRight="@dimen/tool_lib_16dp"
                    android:background="@drawable/login_login_btn"
                    android:text="@string/add_task"
                    android:textColor="@color/tool_lib_white_FFFFFF"
                    android:textSize="@dimen/tool_lib_14sp" />
            </LinearLayout>
        </RelativeLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</RelativeLayout>