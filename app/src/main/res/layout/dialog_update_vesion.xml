<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relVersion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/seekLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/tool_lib_42dp"
        android:paddingTop="@dimen/tool_lib_6dp"
        android:paddingRight="@dimen/tool_lib_42dp"
        android:paddingBottom="@dimen/tool_lib_6dp">

        <TextView
            android:id="@+id/tvSeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_whit_rectangle"
            android:gravity="center"
            android:padding="@dimen/tool_lib_5dp"
            android:text="@string/zero"
            android:textColor="@color/tool_lib_gray_222222" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tool_lib_8dp"
            android:layout_marginTop="@dimen/tool_lib_6dp"
            android:layout_marginRight="@dimen/tool_lib_8dp"
            android:max="100"
            android:maxHeight="@dimen/tool_lib_10dp"
            android:minHeight="@dimen/tool_lib_10dp"
            android:progress="0"
            android:progressDrawable="@drawable/po_seekbar"
            android:thumb="@null" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDownLoadTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/tool_lib_4dp"
        android:gravity="center"
        android:text="@string/down_load"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tool_lib_16sp" />
</RelativeLayout>