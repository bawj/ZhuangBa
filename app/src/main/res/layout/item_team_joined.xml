<?xml version="1.0" encoding="utf-8"?>
<com.xiaomai.zhuangba.weight.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemTeamJoinedSwipeMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/tool_lib_16dp"
    android:background="@color/tool_lib_gray_F5F8FA"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tool_lib_16dp"
            android:layout_marginRight="@dimen/tool_lib_16dp"
            android:background="@drawable/whit_bg"
            android:paddingLeft="@dimen/tool_lib_12dp"
            android:paddingRight="@dimen/tool_lib_12dp"
            android:paddingBottom="@dimen/tool_lib_16dp">

            <RelativeLayout
                android:id="@+id/layTeamJoined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tool_lib_14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTeamMemberName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tool_lib_gray_222222"
                    android:textSize="@dimen/tool_lib_15sp"
                    tools:text="林泽宇（队长）" />


                <TextView
                    android:id="@+id/tvTeamDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/tool_lib_gray_777777"
                    android:textSize="@dimen/tool_lib_12sp"
                    tools:text="2019/01/07" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvTeamPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layTeamJoined"
                android:layout_marginTop="@dimen/tool_lib_6dp"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_15sp"
                tools:text="15906676509" />
        </RelativeLayout>

    </RelativeLayout>
    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <Button
        android:id="@+id/btnTop"
        android:layout_width="@dimen/tool_lib_60dp"
        android:layout_height="match_parent"
        android:background="#d9dee4"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="置顶" />

    <Button
        android:id="@+id/btnUnRead"
        android:layout_width="@dimen/tool_lib_120dp"
        android:layout_height="match_parent"
        android:background="#ecd50a"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="标记未读" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="@dimen/tool_lib_78dp"
        android:layout_height="match_parent"
        android:background="@color/tool_lib_color_E74C3C"
        android:text="@string/delete"
        android:textColor="@android:color/white" />
</com.xiaomai.zhuangba.weight.SwipeMenuLayout>