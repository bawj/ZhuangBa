<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tool_lib_gray_F5F6FA"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/tool_lib_16dp"
            android:paddingEnd="@dimen/tool_lib_16dp">

            <!--上刊-->
            <LinearLayout
                android:id="@+id/layLastPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tool_lib_6dp"
                android:layout_marginBottom="@dimen/tool_lib_14dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_photo"
                    android:textColor="@color/tool_lib_gray_222222"
                    android:textSize="@dimen/tool_lib_16sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerLastPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tool_lib_6dp" />

                <TextView
                    android:id="@+id/tvLastPhotoRemark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tool_lib_103dp"
                    android:layout_marginTop="@dimen/tool_lib_6dp"
                    android:background="@drawable/base_advertising_bg"
                    android:paddingStart="@dimen/tool_lib_16dp"
                    android:paddingTop="@dimen/tool_lib_10dp"
                    android:maxLength="100"
                    android:paddingEnd="@dimen/tool_lib_16dp"
                    android:paddingBottom="@dimen/tool_lib_10dp"
                    android:textSize="@dimen/tool_lib_12sp"
                    tools:text="上刊时发现设备有些问题上刊时发现设备有些问题上刊时发现设备有些问题上刊时发现设备有些问题上刊时发现设备有些问题上刊时发现设备有些问题上刊时发现设备有些问题上刊时发现设备有些问题上刊时发现设备有些问题" />

            </LinearLayout>
            <!--下刊-->
            <LinearLayout
                android:id="@+id/layNextIssuePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tool_lib_14dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next_issue_photo"
                    android:textColor="@color/tool_lib_gray_222222"
                    android:textSize="@dimen/tool_lib_16sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerNextIssuePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tool_lib_6dp" />

                <TextView
                    android:id="@+id/tvNextIssuePhotoRemark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tool_lib_103dp"
                    android:layout_marginTop="@dimen/tool_lib_6dp"
                    android:background="@drawable/base_advertising_bg"
                    android:paddingStart="@dimen/tool_lib_16dp"
                    android:paddingTop="@dimen/tool_lib_10dp"
                    android:maxLength="100"
                    android:paddingEnd="@dimen/tool_lib_16dp"
                    android:paddingBottom="@dimen/tool_lib_10dp"
                    android:textSize="@dimen/tool_lib_12sp"
                    tools:text="上刊时发现设备有些问题" />

            </LinearLayout>
            <!--旧广告 新广告-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOldAdvertisementName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/old_advertisement"
                    android:textColor="@color/tool_lib_gray_222222"
                    android:textSize="@dimen/tool_lib_16sp" />

                <ImageView
                    android:id="@+id/ivOldAdvertisement"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tool_lib_110dp"
                    android:layout_marginTop="@dimen/tool_lib_6dp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/bg_employer_authentication_process" />


                <TextView
                    android:id="@+id/tvNewAdvertisementName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tool_lib_14dp"
                    android:text="@string/new_advertisement"
                    android:textColor="@color/tool_lib_gray_222222"
                    android:textSize="@dimen/tool_lib_16sp" />

                <ImageView
                    android:id="@+id/ivNewAdvertisement"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tool_lib_110dp"
                    android:layout_marginTop="@dimen/tool_lib_6dp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/bg_employer_authentication_process" />
            </LinearLayout>
        </LinearLayout>
        <!--订单信息-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_10dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBaseOrderDetailOrderInformation"
                style="@style/item_text_title"
                android:text="@string/order_information" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerOrderInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tool_lib_12dp"
                android:layout_marginTop="@dimen/tool_lib_2dp"
                android:layout_marginRight="@dimen/tool_lib_12dp"
                android:layout_marginBottom="@dimen/tool_lib_8dp"
                android:descendantFocusability="blocksDescendants" />
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>