<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/tool_lib_24dp">

    <ImageView
        android:id="@+id/ivViewAnimShopDel"
        android:layout_width="@dimen/tool_lib_24dp"
        android:layout_height="@dimen/tool_lib_24dp"
        android:background="@drawable/shop_del_bg"
        android:padding="@dimen/tool_lib_6dp"
        android:src="@drawable/ic_del"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvViewAnimShopNumber"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/tool_lib_2dp"
        android:layout_marginRight="@dimen/tool_lib_2dp"
        android:layout_toEndOf="@+id/ivViewAnimShopDel"
        android:layout_toRightOf="@+id/ivViewAnimShopDel"
        android:background="@drawable/shop_number_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/tool_lib_12dp"
        android:paddingRight="@dimen/tool_lib_12dp"
        android:visibility="gone"
        tools:text="1" />

    <ImageView
        android:id="@+id/ivViewAnimShopAdd"
        android:layout_width="@dimen/tool_lib_24dp"
        android:layout_height="@dimen/tool_lib_24dp"
        android:layout_toEndOf="@+id/tvViewAnimShopNumber"
        android:layout_toRightOf="@+id/tvViewAnimShopNumber"
        android:background="@drawable/shop_circular_bg"
        android:padding="@dimen/tool_lib_6dp"
        android:src="@drawable/ic_add" />
</RelativeLayout>