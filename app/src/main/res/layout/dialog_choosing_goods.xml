<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/tool_lib_8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tool_lib_12dp"
            android:paddingRight="@dimen/tool_lib_12dp">

            <TextView
                android:id="@+id/tvChoosingGoodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/tool_lib_12dp"
                android:layout_marginBottom="@dimen/tool_lib_12dp"
                android:layout_toStartOf="@+id/ivChoosingGoodsClose"
                android:layout_toLeftOf="@+id/ivChoosingGoodsClose"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_14sp"
                tools:text="智能通讯座测试机" />

            <ImageView
                android:id="@+id/ivChoosingGoodsClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_combined_shape_close" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_10dp"
            android:paddingLeft="@dimen/tool_lib_12dp"
            android:paddingRight="@dimen/tool_lib_12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/check_number"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp" />

            <com.xiaomai.zhuangba.weight.AnimShopsButton
                android:id="@+id/animChoosingShopBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layChoosingGoods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_18dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/tool_lib_12dp"
            android:paddingRight="@dimen/tool_lib_12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choosing_maintenance_services"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvChoosingGoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tool_lib_10dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_lib_46dp"
            android:layout_marginTop="@dimen/tool_lib_12dp"
            android:background="@color/tool_lib_color_F4F9FF"
            android:paddingLeft="@dimen/tool_lib_12dp"
            android:paddingRight="@dimen/tool_lib_12dp">

            <TextView
                android:id="@+id/tvChoosingMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/content_money"
                android:textColor="@color/tool_lib_red_EF2B2B"
                android:textSize="@dimen/tool_lib_14sp" />

            <TextView
                android:id="@+id/tvChoosingMaintenanceTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tvChoosingMoney"
                android:layout_toRightOf="@+id/tvChoosingMoney"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp"
                android:text="@string/not_choosing_maintenance_" />


            <LinearLayout
                android:id="@+id/laySelectAdd"
                android:layout_width="@dimen/tool_lib_80dp"
                android:layout_height="@dimen/tool_lib_28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/login_login_btn"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/tool_lib_18dp"
                    android:layout_height="@dimen/tool_lib_18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_whit_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/add"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tool_lib_12sp" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>