<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tool_lib_gray_F5F6FA"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_lib_43dp"
        android:src="@drawable/bg_success" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_lib_4dp"
        android:textColor="@color/tool_lib_gray_303343"
        android:textSize="@dimen/tool_lib_14sp"
        android:text="@string/successful_payment_bond" />

    <com.qmuiteam.qmui.layout.QMUIButton
        android:id="@+id/btnPaymentBackHome"
        style="@style/base_btn"
        android:layout_marginLeft="@dimen/tool_lib_16dp"
        android:layout_marginTop="@dimen/tool_lib_30dp"
        android:layout_marginRight="@dimen/tool_lib_16dp"
        android:text="@string/back_to_home_page" />

</LinearLayout>