<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemOrderLayoutFor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="@dimen/tool_lib_12dp"
    android:paddingRight="@dimen/tool_lib_12dp"
    android:paddingBottom="@dimen/tool_lib_12dp"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_white">

        <RelativeLayout
            android:id="@+id/relNeedDeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_10dp">

            <ImageView
                android:id="@+id/ivPatrolMissionChildLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/tool_lib_16dp"
                android:layout_marginLeft="@dimen/tool_lib_16dp"
                android:src="@drawable/ic_advertising_location" />

            <TextView
                android:id="@+id/tvItemOrdersTitle"
                style="@style/item_text_title"
                android:layout_centerVertical="true"
                android:layout_marginTop="0dp"
                android:layout_toStartOf="@+id/tvPatrolMissionChildNumber"
                android:layout_toLeftOf="@+id/tvPatrolMissionChildNumber"
                android:layout_toEndOf="@+id/ivPatrolMissionChildLocation"
                android:layout_toRightOf="@+id/ivPatrolMissionChildLocation"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="润达花园" />

            <TextView
                android:id="@+id/tvPatrolMissionChildNumber"
                style="@style/item_text_title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="@dimen/tool_lib_16dp"
                android:layout_marginRight="@dimen/tool_lib_16dp"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_14sp"
                tools:text="数量：25" />

        </RelativeLayout>

        <View
            android:id="@+id/viewHorizontalLine"
            style="@style/tool_lib_horizontal_line"
            android:layout_below="@+id/relNeedDeal"
            android:layout_marginLeft="@dimen/tool_lib_12dp"
            android:layout_marginTop="@dimen/tool_lib_14dp"
            android:layout_marginRight="@dimen/tool_lib_12dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewHorizontalLine"
            android:layout_marginStart="@dimen/tool_lib_12dp"
            android:layout_marginLeft="@dimen/tool_lib_12dp"
            android:layout_marginTop="@dimen/tool_lib_12dp"
            android:layout_marginEnd="@dimen/tool_lib_12dp"
            android:layout_marginRight="@dimen/tool_lib_12dp"
            android:layout_marginBottom="@dimen/tool_lib_12dp">

            <TextView
                android:id="@+id/tvItemInspectionAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@+id/tvPatrolMissionChildTotal"
                android:layout_toLeftOf="@+id/tvPatrolMissionChildTotal"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_11sp"
                tools:text="地址：杭州市西湖区三墩镇润达花园" />

            <TextView
                android:id="@+id/tvPatrolMissionChildTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/tool_lib_color_3AB960"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="3/25" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>