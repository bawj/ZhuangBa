<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relItemInputs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/tool_lib_12dp"
    android:paddingBottom="@dimen/tool_lib_12dp">

    <TextView
        android:id="@+id/tvItemInputsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tool_lib_12dp"
        android:layout_marginLeft="@dimen/tool_lib_12dp"
        android:layout_toStartOf="@+id/linearLayoutInputs"
        android:layout_toLeftOf="@+id/linearLayoutInputs"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/tool_lib_14sp"
        tools:text="浙江省杭州市余杭区良渚镇勾庄工业园浙江省杭州市余杭区良渚镇勾庄工业园" />

    <TextView
        android:id="@+id/tvItemInputAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvItemInputsName"
        android:layout_marginStart="@dimen/tool_lib_12dp"
        android:layout_marginLeft="@dimen/tool_lib_12dp"
        android:layout_marginTop="@dimen/tool_lib_2dp"
        android:layout_toStartOf="@+id/linearLayoutInputs"
        android:layout_toLeftOf="@+id/linearLayoutInputs"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/tool_lib_11sp"
        tools:text="浙江省杭州市余杭区良渚镇勾庄工业园浙江省杭州市余杭区良渚镇勾庄工业园" />

    <LinearLayout
        android:id="@+id/linearLayoutInputs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tvItemInputsDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tool_lib_12dp"
            android:layout_marginRight="@dimen/tool_lib_12dp"
            android:textColor="@color/tool_lib_gray_B1B1B1"
            android:textSize="@dimen/tool_lib_14sp"
            tools:text="5KM" />

        <ImageView
            android:id="@+id/ivItemInputsSel"
            android:layout_width="@dimen/tool_lib_14dp"
            android:layout_height="@dimen/tool_lib_14dp"
            android:layout_marginLeft="@dimen/tool_lib_12dp"
            android:layout_marginRight="@dimen/tool_lib_12dp"
            android:src="@drawable/ic_select"
            android:textColor="@color/tool_lib_gray_B1B1B1"
            android:textSize="@dimen/tool_lib_14sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>