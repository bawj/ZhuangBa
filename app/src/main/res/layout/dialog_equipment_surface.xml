<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivEquipmentSurfaceRules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tool_lib_16dp"
                android:layout_marginTop="@dimen/tool_lib_12dp"
                android:layout_marginEnd="@dimen/tool_lib_16dp" />

            <TextView
                android:id="@+id/tvSurfaceRules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tool_lib_16dp"
                android:layout_marginTop="@dimen/tool_lib_13dp"
                android:layout_marginEnd="@dimen/tool_lib_16dp"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_16sp"
                tools:text="拍照样式拍照样式拍照样式拍照样式拍照样式拍照样式拍照样式拍照样式拍照样式" />

            <com.qmuiteam.qmui.layout.QMUIButton
                android:id="@+id/btnGotIt"
                android:layout_width="match_parent"
                android:background="@drawable/login_login_btn"
                android:textSize="@dimen/tool_lib_14sp"
                android:textColor="@android:color/white"
                android:layout_height="@dimen/tool_lib_40dp"
                android:layout_marginLeft="@dimen/tool_lib_16dp"
                android:layout_marginTop="@dimen/tool_lib_24dp"
                android:layout_marginRight="@dimen/tool_lib_16dp"
                android:layout_marginBottom="@dimen/tool_lib_12dp"
                android:text="@string/got_it" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>