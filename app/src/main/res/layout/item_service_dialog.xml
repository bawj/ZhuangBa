<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/tool_lib_12dp"
    android:paddingBottom="@dimen/tool_lib_12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivServiceIcon"
        android:layout_width="@dimen/tool_lib_46dp"
        android:layout_height="@dimen/tool_lib_46dp"
        android:layout_centerHorizontal="true"
        tools:src="@drawable/ic_identification" />

    <TextView
        android:id="@+id/tvServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivServiceIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/tool_lib_6dp"
        android:textColor="@color/tool_lib_gray_777777"
        android:textSize="@dimen/tool_lib_14sp"
        tools:text="公共安全" />
</RelativeLayout>