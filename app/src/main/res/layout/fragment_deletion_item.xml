<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_lib_6dp"
        android:layout_marginBottom="@dimen/tool_lib_56dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/tool_lib_12dp"
        android:paddingEnd="@dimen/tool_lib_12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_12dp"
            android:text="@string/select_items_to_reduce"
            android:textColor="@color/tool_lib_gray_222222"
            android:textSize="@dimen/tool_lib_16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerDeletionItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_12dp" />
    </LinearLayout>

    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:id="@+id/itemSelectServiceLayoutFor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_lib_56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/qmui_config_color_white"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        app:qmui_showBorderOnlyBeforeL="true">

        <Button
            android:id="@+id/btnSubmitAudit"
            style="@style/base_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/tool_lib_16dp"
            android:layout_marginTop="@dimen/tool_lib_8dp"
            android:layout_marginEnd="@dimen/tool_lib_16dp"
            android:layout_marginBottom="@dimen/tool_lib_8dp"
            android:text="@string/submit_audit" />
    </com.qmuiteam.qmui.layout.QMUILinearLayout>

</RelativeLayout>