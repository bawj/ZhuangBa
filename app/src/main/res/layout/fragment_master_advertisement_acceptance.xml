<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tool_lib_gray_F5F6FA">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshBaseList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:srlAccentColor="@android:color/white"
        app:srlEnableHeaderTranslationContent="false"
        app:srlEnableLoadMore="false"
        app:srlPrimaryColor="@color/colorPrimary">

        <com.scwang.smartrefresh.header.MaterialHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/layBaseOrderDetail"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/relOrderInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/relAdvertisementTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvBaseOrderDetailItemOrdersTitle"
                                style="@style/item_text_title"
                                android:layout_centerVertical="true"
                                android:text="@string/advertising_replacement" />

                            <TextView
                                android:id="@+id/tvBaseOrderDetailItemOrdersType"
                                style="@style/order_status"
                                android:layout_centerVertical="true"
                                android:background="@drawable/distribution_half_fillet_bg"
                                tools:text="分配中" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvBaseAdvertisementEquipmentNumber"
                                style="@style/advertisement_text"
                                android:layout_centerVertical="true"
                                android:text="@string/equipment_number" />

                            <TextView
                                android:id="@+id/tvBaseEquipmentNumber"
                                style="@style/advertisement_text"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/tool_lib_24dp"
                                android:layout_marginLeft="@dimen/tool_lib_24dp"
                                android:layout_toStartOf="@+id/tvBaseAdvertisementMoney"
                                android:layout_toLeftOf="@+id/tvBaseAdvertisementMoney"
                                android:layout_toEndOf="@+id/tvBaseAdvertisementEquipmentNumber"
                                android:layout_toRightOf="@+id/tvBaseAdvertisementEquipmentNumber"
                                android:textColor="@color/tool_lib_gray_222222"
                                tools:text="LLDKJDH" />

                            <TextView
                                android:id="@+id/tvBaseAdvertisementMoney"
                                style="@style/order_money"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="0dp"
                                tools:text="¥3200.00" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tool_lib_8dp">

                            <TextView
                                android:id="@+id/tvBaseChangePlaces"
                                style="@style/advertisement_text"
                                android:text="@string/change_places" />

                            <TextView
                                android:id="@+id/tvBaseAdvertisementChangePlaces"
                                style="@style/advertisement_text"
                                android:layout_marginStart="@dimen/tool_lib_24dp"
                                android:layout_marginLeft="@dimen/tool_lib_24dp"
                                android:layout_toEndOf="@+id/tvBaseChangePlaces"
                                android:layout_toRightOf="@+id/tvBaseChangePlaces"
                                android:textColor="@color/tool_lib_gray_222222"
                                tools:text="A面" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tool_lib_8dp">

                            <TextView
                                android:id="@+id/tvBaseBatchQueryNumber"
                                style="@style/advertisement_text"
                                android:text="@string/batch_query_number" />

                            <TextView
                                android:id="@+id/tvBaseAdvertisementBatchQueryNumber"
                                style="@style/advertisement_text"
                                android:layout_toEndOf="@+id/tvBaseBatchQueryNumber"
                                android:layout_toRightOf="@+id/tvBaseBatchQueryNumber"
                                android:textColor="@color/tool_lib_gray_222222"
                                tools:text="7266473746778273" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tool_lib_8dp">

                            <TextView
                                android:id="@+id/tvBaseDateOfAppointment"
                                style="@style/advertisement_text"
                                android:text="@string/date_of_appointment_" />

                            <TextView
                                android:id="@+id/tvBaseAdvertisementDateOfAppointment"
                                style="@style/advertisement_text"
                                android:layout_marginStart="@dimen/tool_lib_24dp"
                                android:layout_marginLeft="@dimen/tool_lib_24dp"
                                android:layout_toEndOf="@+id/tvBaseDateOfAppointment"
                                android:layout_toRightOf="@+id/tvBaseDateOfAppointment"
                                android:textColor="@color/tool_lib_gray_222222"
                                tools:text="2019/01/24 13:20:01 ～ 2019/01/24 13:20:01" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tool_lib_8dp">

                            <TextView
                                android:id="@+id/tvBaseServiceCycle"
                                style="@style/advertisement_text"
                                android:text="@string/service_cycle" />

                            <TextView
                                android:id="@+id/tvBaseAdvertisementServiceCycle"
                                style="@style/advertisement_text"
                                android:layout_marginStart="@dimen/tool_lib_24dp"
                                android:layout_marginLeft="@dimen/tool_lib_24dp"
                                android:layout_toEndOf="@+id/tvBaseServiceCycle"
                                android:layout_toRightOf="@+id/tvBaseServiceCycle"
                                android:textColor="@color/tool_lib_gray_222222"
                                tools:text="单次服务" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tool_lib_8dp">

                            <TextView
                                android:id="@+id/tvBaseNotes"
                                style="@style/advertisement_text"
                                android:text="@string/notes" />

                            <TextView
                                android:id="@+id/tvBaseAdvertisementNotes"
                                style="@style/advertisement_text"
                                android:layout_marginStart="@dimen/tool_lib_24dp"
                                android:layout_marginLeft="@dimen/tool_lib_24dp"
                                android:layout_toEndOf="@+id/tvBaseNotes"
                                android:layout_toRightOf="@+id/tvBaseNotes"
                                android:textColor="@color/tool_lib_gray_222222"
                                tools:text="计算机上进的好想你的角度还是内心就是想对你说 数据库" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/viewHorizontalLine"
                            style="@style/tool_lib_horizontal_line"
                            android:layout_marginLeft="@dimen/tool_lib_12dp"
                            android:layout_marginTop="@dimen/tool_lib_12dp"
                            android:layout_marginRight="@dimen/tool_lib_12dp" />

                        <RelativeLayout
                            android:id="@+id/relBaseOrderDetailLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/tool_lib_12dp"
                            android:paddingBottom="@dimen/tool_lib_12dp">

                            <ImageView
                                android:id="@+id/ivBaseOrderDetailLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/tool_lib_12dp"
                                android:layout_marginLeft="@dimen/tool_lib_12dp"
                                android:background="@drawable/ic_location_order" />

                            <TextView
                                android:id="@+id/tvBaseOrderDetailLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/tool_lib_3dp"
                                android:layout_marginRight="@dimen/tool_lib_3dp"
                                android:layout_toStartOf="@+id/ivBaseOrderDetailRight"
                                android:layout_toLeftOf="@+id/ivBaseOrderDetailRight"
                                android:layout_toEndOf="@+id/ivBaseOrderDetailLocation"
                                android:layout_toRightOf="@+id/ivBaseOrderDetailLocation"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/tool_lib_gray_222222"
                                android:textSize="@dimen/tool_lib_12sp"
                                tools:text="杭州市余杭区西溪北苑西区38幢3单元1502" />

                            <ImageView
                                android:id="@+id/ivBaseOrderDetailRight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/tool_lib_12dp"
                                android:layout_marginRight="@dimen/tool_lib_12dp"
                                android:src="@drawable/ic_right" />
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relEmployerDeliveryContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tool_lib_8dp"
                        android:background="@android:color/white">

                        <TextView
                            android:id="@+id/tvEmployerDeliveryContent_"
                            style="@style/item_text_title"
                            android:text="@string/post_construction_photos" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerPostConstruction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvEmployerDeliveryContent_"
                            android:layout_marginLeft="@dimen/tool_lib_12dp"
                            android:layout_marginTop="@dimen/tool_lib_8dp"
                            android:layout_marginRight="@dimen/tool_lib_12dp"
                            android:layout_marginBottom="@dimen/tool_lib_8dp"
                            android:descendantFocusability="blocksDescendants" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relEmployerScenePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tool_lib_8dp"
                        android:background="@android:color/white">

                        <TextView
                            android:id="@+id/tvMasterWorkerScenePhoto"
                            style="@style/item_text_title"
                            android:text="@string/pre_construction_photos" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerScenePhoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvMasterWorkerScenePhoto"
                            android:layout_marginLeft="@dimen/tool_lib_12dp"
                            android:layout_marginTop="@dimen/tool_lib_8dp"
                            android:layout_marginRight="@dimen/tool_lib_12dp"
                            android:layout_marginBottom="@dimen/tool_lib_8dp"
                            android:descendantFocusability="blocksDescendants" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tool_lib_8dp"
                        android:background="@android:color/white">

                        <TextView
                            android:id="@+id/tvBaseOrderDetailServiceItems"
                            style="@style/item_text_title"
                            android:text="@string/replacement_of_advertising_drawings" />

                        <ImageView
                            android:id="@+id/ivBaseReplacementOfAdvertisingDrawings"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/tool_lib_110dp"
                            android:layout_below="@+id/tvBaseOrderDetailServiceItems"
                            android:layout_margin="@dimen/tool_lib_16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relBaseOrderInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tool_lib_8dp"
                        android:background="@android:color/white">

                        <TextView
                            android:id="@+id/tvBaseOrderDetailOrderInformation"
                            style="@style/item_text_title"
                            android:text="@string/order_information" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerOrderInformation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvBaseOrderDetailOrderInformation"
                            android:layout_marginLeft="@dimen/tool_lib_12dp"
                            android:layout_marginTop="@dimen/tool_lib_2dp"
                            android:layout_marginRight="@dimen/tool_lib_12dp"
                            android:layout_marginBottom="@dimen/tool_lib_8dp"
                            android:descendantFocusability="blocksDescendants" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tool_lib_44dp"
                        android:layout_marginTop="@dimen/tool_lib_8dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/tool_lib_16dp"
                            android:layout_marginRight="@dimen/tool_lib_16dp"
                            android:background="@drawable/bg_divide_into_columns_bg">

                            <ImageView
                                android:layout_width="@dimen/tool_lib_12dp"
                                android:layout_height="@dimen/tool_lib_12dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/tool_lib_10dp"
                                android:layout_marginLeft="@dimen/tool_lib_10dp"
                                android:layout_marginTop="@dimen/tool_lib_6dp"
                                android:layout_marginBottom="@dimen/tool_lib_6dp"
                                android:src="@drawable/ic_tip" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/tool_lib_6dp"
                                android:layout_marginLeft="@dimen/tool_lib_6dp"
                                android:textColor="@color/tool_lib_gray_C76900"
                                android:textSize="@dimen/tool_lib_12sp"
                                tools:text="验收截止时间：2019.08.09 13:08:00" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </RelativeLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</RelativeLayout>