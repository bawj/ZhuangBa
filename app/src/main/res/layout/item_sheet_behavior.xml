<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvShopName"
        android:layout_width="@dimen/tool_lib_125dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxLength="7"
        android:textColor="@color/tool_lib_gray_222222"
        android:textSize="@dimen/tool_lib_14sp"
        tools:text="智能通讯座调试" />

    <TextView
        android:id="@+id/tvShopMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/tool_lib_12dp"
        android:layout_marginLeft="@dimen/tool_lib_12dp"
        android:layout_toEndOf="@+id/tvShopName"
        android:layout_toRightOf="@+id/tvShopName"
        android:textColor="@color/tool_lib_red_EF2B2B"
        android:textSize="@dimen/tool_lib_14sp"
        tools:text="¥80.00" />

    <com.xiaomai.zhuangba.weight.AnimShopsButton
        android:id="@+id/animShopDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/tool_lib_12dp"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>