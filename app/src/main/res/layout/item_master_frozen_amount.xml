<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemOrderLayoutFor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/tool_lib_12dp"
    android:background="@color/qmui_config_color_white"
    android:orientation="vertical"
    app:qmui_borderColor="?attr/qmui_config_color_separator"
    app:qmui_outerNormalColor="?attr/qmui_config_color_background"
    app:qmui_showBorderOnlyBeforeL="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/tool_lib_16dp"
        android:paddingTop="@dimen/tool_lib_12dp"
        android:paddingRight="@dimen/tool_lib_16dp"
        android:paddingBottom="@dimen/tool_lib_12dp">

        <TextView
            android:id="@+id/tvMonthlyStatement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monthly_statement"
            android:textColor="@color/tool_lib_gray_222222"
            android:textSize="@dimen/tool_lib_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_6dp"
            android:textColor="@color/tool_lib_gray_777777"
            android:textSize="@dimen/tool_lib_12sp"
            tools:text="订单编号：HZD12542152" />

        <View
            style="@style/tool_lib_horizontal_line"
            android:layout_marginTop="@dimen/tool_lib_12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_12dp">

            <TextView
                android:id="@+id/tvAccountingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tool_lib_20dp"
                android:layout_marginRight="@dimen/tool_lib_20dp"
                android:layout_toStartOf="@+id/tvAmountOfAccount"
                android:layout_toLeftOf="@+id/tvAmountOfAccount"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="入账时间：每月01号" />

            <TextView
                android:id="@+id/tvAmountOfAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="入账金额：¥200/月" />
        </RelativeLayout>
    </LinearLayout>

</com.qmuiteam.qmui.layout.QMUILinearLayout>