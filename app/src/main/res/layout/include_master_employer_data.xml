<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNumberOfEmployers_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_employers"
                android:textColor="@color/tool_lib_gray_B1B1B1"
                android:textSize="@dimen/tool_lib_11sp" />

            <TextView
                android:id="@+id/tvNumberOfEmployers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNumberOfEmployers_"
                android:layout_marginTop="@dimen/tool_lib_3dp"
                android:text="@string/zero"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tool_lib_18sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/orderQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOrderQuantity_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_quantity"
                android:textColor="@color/tool_lib_gray_B1B1B1"
                android:textSize="@dimen/tool_lib_11sp" />

            <TextView
                android:id="@+id/tvOrderQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOrderQuantity_"
                android:layout_marginTop="@dimen/tool_lib_3dp"
                android:text="@string/zero"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tool_lib_18sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layTaskAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTaskAmount_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_amount"
                android:textColor="@color/tool_lib_gray_B1B1B1"
                android:textSize="@dimen/tool_lib_11sp" />

            <TextView
                android:id="@+id/tvTaskAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTaskAmount_"
                android:layout_marginTop="@dimen/tool_lib_3dp"
                android:text="@string/zero"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tool_lib_18sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_lib_6dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNumberOfTeachers_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_teachers"
                android:textColor="@color/tool_lib_gray_B1B1B1"
                android:textSize="@dimen/tool_lib_11sp" />

            <TextView
                android:id="@+id/tvNumberOfTeachers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNumberOfTeachers_"
                android:layout_marginTop="@dimen/tool_lib_3dp"
                android:text="@string/zero"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tool_lib_18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvExclusiveNumber_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exclusive_number"
                android:textColor="@color/tool_lib_gray_B1B1B1"
                android:textSize="@dimen/tool_lib_11sp" />

            <TextView
                android:id="@+id/tvExclusiveNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvExclusiveNumber_"
                android:layout_marginTop="@dimen/tool_lib_3dp"
                android:text="@string/zero"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tool_lib_18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCrowdSourcingNumber_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crowd_sourcing_number"
                android:textColor="@color/tool_lib_gray_B1B1B1"
                android:textSize="@dimen/tool_lib_11sp" />

            <TextView
                android:id="@+id/tvCrowdSourcingNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCrowdSourcingNumber_"
                android:layout_marginTop="@dimen/tool_lib_3dp"
                android:text="@string/zero"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tool_lib_18sp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>