<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tool_lib_27dp"
        android:layout_marginRight="@dimen/tool_lib_27dp"
        android:layout_toStartOf="@+id/orderQuantity"
        android:layout_toLeftOf="@+id/orderQuantity"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_teachers"
            android:textColor="@color/tool_lib_gray_B1B1B1"
            android:textSize="@dimen/tool_lib_11sp" />

        <TextView
            android:id="@+id/tvNumberOfTeachers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_3dp"
            android:text="@string/zero"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tool_lib_24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tool_lib_27dp"
        android:layout_marginRight="@dimen/tool_lib_27dp"
        android:layout_toStartOf="@+id/layTaskAmount"
        android:layout_toLeftOf="@+id/layTaskAmount"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_quantity"
            android:textColor="@color/tool_lib_gray_B1B1B1"
            android:textSize="@dimen/tool_lib_11sp" />

        <TextView
            android:id="@+id/tvOrderQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_3dp"
            android:text="@string/zero"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tool_lib_24sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layTaskAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/tool_lib_16dp"
        android:layout_marginRight="@dimen/tool_lib_16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_amount"
            android:textColor="@color/tool_lib_gray_B1B1B1"
            android:textSize="@dimen/tool_lib_11sp" />

        <TextView
            android:id="@+id/tvTaskAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_3dp"
            android:text="@string/zero"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tool_lib_24sp" />
    </LinearLayout>
</RelativeLayout>