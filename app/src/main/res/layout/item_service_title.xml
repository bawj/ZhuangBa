<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relServiceTitleAdapter"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tool_lib_52dp"
    android:background="@color/tool_lib_gray_F1F1F1">

    <View
        android:id="@+id/viewServiceTitleAdapterLine"
        android:layout_width="@dimen/tool_lib_3dp"
        android:layout_height="@dimen/tool_lib_26dp"
        android:layout_centerVertical="true"
        android:background="@color/tool_lib_orange_FFFF5C2B"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvServiceTitleAdapterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/tool_lib_8dp"
        android:layout_marginRight="@dimen/tool_lib_8dp"
        android:textColor="@android:color/black" />

</RelativeLayout>