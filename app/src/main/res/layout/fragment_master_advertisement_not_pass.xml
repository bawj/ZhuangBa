<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tool_lib_gray_F5F6FA"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshBaseList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:srlAccentColor="@android:color/white"
        app:srlEnableHeaderTranslationContent="false"
        app:srlEnableLoadMore="false"
        app:srlPrimaryColor="@color/colorPrimary">

        <com.scwang.smartrefresh.header.MaterialHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/relAdvertisementNewTask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/coordinatorBaseAdvertising"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.CollapsingToolbarLayout
                        android:id="@+id/collapsingToolBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/tool_lib_gray_F5F8FA"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                        <LinearLayout
                            android:id="@+id/layOrderInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tool_lib_10dp"
                            android:background="@android:color/white"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/relAdvertisementTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvBaseOrderDetailItemOrdersTitle"
                                    style="@style/item_text_title"
                                    android:layout_centerVertical="true"
                                    android:text="@string/advertising_replacement" />

                                <TextView
                                    android:id="@+id/tvBaseOrderDetailItemOrdersType"
                                    style="@style/order_status"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/distribution_half_fillet_bg"
                                    tools:text="分配中" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvBaseAdvertisementEquipmentNumber"
                                    style="@style/advertisement_text"
                                    android:layout_centerVertical="true"
                                    android:text="@string/equipment_number" />

                                <TextView
                                    android:id="@+id/tvBaseEquipmentNumber"
                                    style="@style/advertisement_text"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/tool_lib_24dp"
                                    android:layout_toStartOf="@+id/tvBaseAdvertisementMoney"
                                    android:layout_toEndOf="@+id/tvBaseAdvertisementEquipmentNumber"
                                    android:textColor="@color/tool_lib_gray_222222"
                                    tools:text="LLDKJDH" />

                                <TextView
                                    android:id="@+id/tvBaseAdvertisementMoney"
                                    style="@style/order_money"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="0dp"
                                    tools:text="¥3200.00" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_lib_8dp">

                                <TextView
                                    android:id="@+id/tvBaseChangePlaces"
                                    style="@style/advertisement_text"
                                    android:text="@string/change_places" />

                                <TextView
                                    android:id="@+id/tvBaseAdvertisementChangePlaces"
                                    style="@style/advertisement_text"
                                    android:layout_marginStart="@dimen/tool_lib_24dp"
                                    android:layout_toEndOf="@+id/tvBaseChangePlaces"
                                    android:textColor="@color/tool_lib_gray_222222"
                                    tools:text="A面" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_lib_8dp">

                                <TextView
                                    android:id="@+id/tvBaseBatchQueryNumber"
                                    style="@style/advertisement_text"
                                    android:text="@string/batch_query_number" />

                                <TextView
                                    android:id="@+id/tvBaseAdvertisementBatchQueryNumber"
                                    style="@style/advertisement_text"
                                    android:layout_toEndOf="@+id/tvBaseBatchQueryNumber"
                                    android:textColor="@color/tool_lib_gray_222222"
                                    tools:text="7266473746778273" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_lib_8dp">

                                <TextView
                                    android:id="@+id/tvBaseDateOfAppointment"
                                    style="@style/advertisement_text"
                                    android:text="@string/date_of_appointment_" />

                                <TextView
                                    android:id="@+id/tvBaseAdvertisementDateOfAppointment"
                                    style="@style/advertisement_text"
                                    android:layout_marginStart="@dimen/tool_lib_24dp"
                                    android:layout_toEndOf="@+id/tvBaseDateOfAppointment"
                                    android:textColor="@color/tool_lib_gray_222222"
                                    tools:text="2019/01/24 13:20:01 ～ 2019/01/24 13:20:01" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_lib_8dp">

                                <TextView
                                    android:id="@+id/tvBaseServiceCycle"
                                    style="@style/advertisement_text"
                                    android:text="@string/service_cycle" />

                                <TextView
                                    android:id="@+id/tvBaseAdvertisementServiceCycle"
                                    style="@style/advertisement_text"
                                    android:layout_marginStart="@dimen/tool_lib_24dp"
                                    android:layout_toEndOf="@+id/tvBaseServiceCycle"
                                    android:textColor="@color/tool_lib_gray_222222"
                                    tools:text="单次服务" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_lib_8dp">

                                <TextView
                                    android:id="@+id/tvBaseNotes"
                                    style="@style/advertisement_text"
                                    android:text="@string/notes" />

                                <TextView
                                    android:id="@+id/tvBaseAdvertisementNotes"
                                    style="@style/advertisement_text"
                                    android:layout_marginStart="@dimen/tool_lib_24dp"
                                    android:layout_toEndOf="@+id/tvBaseNotes"
                                    android:textColor="@color/tool_lib_gray_222222"
                                    tools:text="计算机上进的好想你的角度还是内心就是想对你说 数据库" />

                            </RelativeLayout>

                            <View
                                android:id="@+id/viewHorizontalLine"
                                style="@style/tool_lib_horizontal_line"
                                android:layout_marginLeft="@dimen/tool_lib_12dp"
                                android:layout_marginTop="@dimen/tool_lib_12dp"
                                android:layout_marginRight="@dimen/tool_lib_12dp" />

                            <RelativeLayout
                                android:id="@+id/relBaseOrderDetailLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/tool_lib_12dp"
                                android:paddingBottom="@dimen/tool_lib_12dp">

                                <ImageView
                                    android:id="@+id/ivBaseOrderDetailLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/tool_lib_12dp"
                                    android:background="@drawable/ic_location_order"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:id="@+id/tvBaseOrderDetailLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/tool_lib_6dp"
                                    android:layout_marginRight="@dimen/tool_lib_6dp"
                                    android:layout_toStartOf="@+id/ivBaseOrderDetailRight"
                                    android:layout_toEndOf="@+id/ivBaseOrderDetailLocation"
                                    android:textColor="@color/tool_lib_gray_222222"
                                    android:textSize="@dimen/tool_lib_12sp"
                                    tools:text="杭州市余杭区西溪北苑西区38幢3单元1502" />

                                <ImageView
                                    android:id="@+id/ivBaseOrderDetailRight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/tool_lib_12dp"
                                    android:src="@drawable/ic_right" />
                            </RelativeLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerNearbyPhoto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/tool_lib_12dp"
                                android:layout_marginTop="@dimen/tool_lib_6dp"
                                android:layout_marginEnd="@dimen/tool_lib_12dp" />
                        </LinearLayout>
                    </android.support.design.widget.CollapsingToolbarLayout>
                </android.support.design.widget.AppBarLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:fillViewport="true"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <net.lucode.hackware.magicindicator.MagicIndicator
                        android:id="@+id/magicIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tool_lib_46dp"
                        android:paddingLeft="@dimen/tool_lib_8dp"
                        android:paddingRight="@dimen/tool_lib_8dp" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tool_lib_8dp"
                        android:paddingBottom="@dimen/tool_lib_56dp" />
                </LinearLayout>
            </android.support.design.widget.CoordinatorLayout>

            <RelativeLayout
                android:id="@+id/relNewTaskOrderDetailBottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tool_lib_56dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/white">


                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/btnCancelAdvertisementOrder"
                    android:layout_width="@dimen/tool_lib_90dp"
                    android:layout_height="@dimen/tool_lib_40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/tool_lib_16dp"
                    android:layout_toStartOf="@+id/btnPhotoNextOrLastAdvertisement"
                    android:text="@string/cancel_order"
                    android:textColor="@color/tool_lib_gray_777777"
                    android:textSize="@dimen/tool_lib_14sp"
                    android:visibility="gone"
                    app:qmui_backgroundColor="@android:color/white"
                    app:qmui_borderColor="@color/tool_lib_gray_E8E8E8"
                    app:qmui_borderWidth="@dimen/tool_lib_1dp" />
                <!--下刊拍照 或 上刊拍照-->
                <com.qmuiteam.qmui.layout.QMUIButton
                    android:id="@+id/btnPhotoNextOrLastAdvertisement"
                    style="@style/base_btn"
                    android:layout_width="@dimen/tool_lib_90dp"
                    android:layout_height="@dimen/tool_lib_40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/tool_lib_16dp"
                    android:text="@string/photo_taken_in_next_issue" />
            </RelativeLayout>
        </RelativeLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>