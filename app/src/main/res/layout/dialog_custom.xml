<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/tool_lib_8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/tool_lib_12dp"
            android:text="@string/custom_supplement"
            android:textColor="@color/tool_lib_gray_222222"
            android:textSize="@dimen/tool_lib_18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_12dp"
            android:paddingStart="@dimen/tool_lib_16dp"
            android:paddingEnd="@dimen/tool_lib_16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/supplementary_amount"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/tool_lib_34dp"
                android:background="@drawable/gray_field_description_bg"
                android:paddingStart="@dimen/tool_lib_12dp"
                android:paddingEnd="@dimen/tool_lib_12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/money"
                    android:textColor="@color/tool_lib_gray_222222"
                    android:textSize="@dimen/tool_lib_12sp" />

                <EditText
                    android:id="@+id/editSupplementaryAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/tool_lib_6dp"
                    android:background="@null"
                    android:hint="@string/please_fill_in_the_amount"
                    android:inputType="number"
                    android:textColor="@color/tool_lib_gray_222222"
                    android:textColorHint="@color/tool_lib_gray_B1B1B1"
                    android:textSize="@dimen/tool_lib_12sp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvClaimReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tool_lib_16dp"
            android:layout_marginTop="@dimen/tool_lib_12dp"
            android:layout_marginEnd="@dimen/tool_lib_16dp"
            android:text="@string/remarks"
            android:textColor="@color/tool_lib_gray_222222"
            android:textSize="@dimen/tool_lib_12sp" />

        <EditText
            android:id="@+id/editCancellation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_lib_110dp"
            android:layout_marginStart="@dimen/tool_lib_16dp"
            android:layout_marginTop="@dimen/tool_lib_6dp"
            android:layout_marginEnd="@dimen/tool_lib_16dp"
            android:background="@drawable/gray_field_description_bg"
            android:gravity="start"
            android:hint="@string/please_fill_in_the_reason_for_cancellation"
            android:maxLength="200"
            android:padding="@dimen/tool_lib_12dp"
            android:textColor="@color/tool_lib_gray_222222"
            android:textColorHint="@color/tool_lib_gray_B1B1B1"
            android:textSize="@dimen/tool_lib_12sp" />

        <View
            style="@style/tool_lib_horizontal_line"
            android:layout_marginTop="@dimen/tool_lib_12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_lib_43dp">

            <TextView
                android:id="@+id/tvOk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_14sp" />

            <View style="@style/tool_lib_vertical_line" />

            <TextView
                android:id="@+id/tvClose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/close"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_14sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>