<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_alipay_account"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tool_lib_60dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/tool_lib_36dp"
        android:layout_height="@dimen/tool_lib_36dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/tool_lib_16dp"
        android:src="@drawable/icon_alipay" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/text_12_222222"
        android:layout_alignTop="@id/iv_icon"
        android:layout_marginLeft="@dimen/tool_lib_16dp"
        android:layout_marginStart="@dimen/tool_lib_16dp"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_toRightOf="@id/iv_icon" />

    <TextView
        android:id="@+id/tv_account"
        style="@style/text_12_777777"
        android:layout_alignBottom="@id/iv_icon"
        android:layout_marginLeft="@dimen/tool_lib_16dp"
        android:layout_marginStart="@dimen/tool_lib_16dp"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_toRightOf="@id/iv_icon" />

    <ImageView
        android:id="@+id/ivAlipayAccountRight"
        android:layout_width="@dimen/tool_lib_8dp"
        android:layout_height="@dimen/tool_lib_16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/tool_lib_16dp"
        android:layout_marginRight="@dimen/tool_lib_16dp"
        android:src="@drawable/ic_right"
        android:visibility="gone" />

    <View
        android:id="@+id/viewAlipayAccount"
        style="@style/tool_lib_horizontal_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/tool_lib_68dp"
        android:layout_marginStart="@dimen/tool_lib_68dp"
        android:layout_marginEnd="@dimen/tool_lib_16dp"
        android:layout_marginRight="@dimen/tool_lib_16dp" />

</RelativeLayout>
