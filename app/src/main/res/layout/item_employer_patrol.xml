<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/tool_lib_5dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tool_lib_12dp"
        android:layout_marginLeft="@dimen/tool_lib_12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relHistorical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_12dp">

            <TextView
                android:id="@+id/tvItemPatrolDeviceNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_16sp"
                tools:text="设备号：201221120120120" />

            <TextView
                android:id="@+id/tvItemOrdersType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/distribution_half_fillet_bg"
                android:padding="@dimen/tool_lib_8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="分配中" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_10dp">

            <ImageView
                android:layout_width="@dimen/tool_lib_14dp"
                android:layout_height="@dimen/tool_lib_14dp"
                android:layout_marginTop="@dimen/tool_lib_2dp"
                android:src="@drawable/ic_maintenance_date" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tool_lib_5dp"
                android:layout_marginLeft="@dimen/tool_lib_5dp">

                <TextView
                    android:id="@+id/tvLengthOfService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tool_lib_gray_777777"
                    android:textSize="@dimen/tool_lib_12sp"
                    tools:text="服务时长：3个月 " />

                <TextView
                    android:id="@+id/tvServiceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvLengthOfService"
                    android:layout_marginTop="@dimen/tool_lib_8dp"
                    android:textColor="@color/tool_lib_gray_777777"
                    android:textSize="@dimen/tool_lib_12sp"
                    tools:text="服务日期：每周二 " />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_10dp">

            <ImageView
                android:layout_width="@dimen/tool_lib_14dp"
                android:layout_height="@dimen/tool_lib_14dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_noodles" />

            <TextView
                android:id="@+id/tvNoodles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tool_lib_3dp"
                android:layout_marginLeft="@dimen/tool_lib_3dp"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="A面 B面 C面 D面" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_10dp">

            <ImageView
                android:layout_width="@dimen/tool_lib_14dp"
                android:layout_height="@dimen/tool_lib_14dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/tvPatrolAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tool_lib_3dp"
                android:layout_marginLeft="@dimen/tool_lib_3dp"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="杭州市江干钱江新城2390号" />

        </LinearLayout>

        <View
            android:id="@+id/viewHorizontalLine"
            style="@style/tool_lib_horizontal_line"
            android:layout_marginTop="@dimen/tool_lib_14dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_14dp"
            android:layout_marginBottom="@dimen/tool_lib_14dp">

            <TextView
                android:id="@+id/tvAdvertisingMoney_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/tvAdvertisingMoney"
                android:layout_toLeftOf="@+id/tvAdvertisingMoney"
                android:text="@string/total"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_12sp" />

            <TextView
                android:id="@+id/tvAdvertisingMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/tool_lib_16dp"
                android:layout_marginRight="@dimen/tool_lib_16dp"
                android:textColor="@color/tool_lib_red_EF2B2B"
                android:textSize="@dimen/tool_lib_14sp"
                tools:text="¥300.00" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>