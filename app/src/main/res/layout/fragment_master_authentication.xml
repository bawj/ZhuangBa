<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tool_lib_gray_F5F8FA"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_lib_56dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/tool_lib_16dp"
        android:layout_marginRight="@dimen/tool_lib_16dp">

        <ImageView
            android:id="@+id/ivAuthenticationBack"
            android:layout_width="@dimen/tool_lib_24dp"
            android:layout_height="@dimen/tool_lib_24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/cq_ic_arrow_back_white_24dp" />

        <!--用户头像-->
        <ImageView
            android:id="@+id/ivUserHead"
            android:layout_width="@dimen/tool_lib_30dp"
            android:layout_height="@dimen/tool_lib_30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_def_head" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layAuthentication"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_lib_125dp"
        android:layout_below="@+id/relHeader"
        android:layout_marginLeft="@dimen/tool_lib_16dp"
        android:layout_marginRight="@dimen/tool_lib_16dp"
        android:background="@drawable/bg_master_authentication"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAuditInProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tool_lib_24dp"
            android:layout_marginLeft="@dimen/tool_lib_24dp"
            android:text="@string/audit_in_progress"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tool_lib_14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvAuthenticationMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tool_lib_24dp"
            android:layout_marginLeft="@dimen/tool_lib_24dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tool_lib_16sp"
            tools:text="认证成为装捌师傅" />

        <TextView
            android:id="@+id/tvAuthenticationTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tool_lib_24dp"
            android:layout_marginLeft="@dimen/tool_lib_24dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tool_lib_12sp"
            tools:text="海量业务，真实可靠，结算付款。" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvAuthenticationRegistrationProcess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layAuthentication"
        android:layout_marginLeft="@dimen/tool_lib_16dp"
        android:layout_marginTop="@dimen/tool_lib_21dp"
        android:layout_marginRight="@dimen/tool_lib_16dp"
        android:text="@string/registration_process"
        android:textColor="@color/tool_lib_gray_222222"
        android:textSize="@dimen/tool_lib_17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAuthenticationRegistrationProcess"
        android:layout_marginLeft="@dimen/tool_lib_16dp"
        android:layout_marginTop="@dimen/tool_lib_14dp"
        android:layout_marginRight="@dimen/tool_lib_16dp"
        android:background="@drawable/whit_bg"
        android:orientation="vertical"
        android:padding="@dimen/tool_lib_16dp">

        <ImageView
            android:id="@+id/ivAuthenticationExplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/bg_master_authentication_process" />

        <com.qmuiteam.qmui.layout.QMUIButton
            android:id="@+id/btnGoAuthentication"
            style="@style/base_btn"
            android:layout_marginTop="@dimen/tool_lib_12dp"
            android:text="@string/go_authentication" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btnRectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_rectangle"
        android:textColor="@android:color/white" />
</RelativeLayout>