<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/tool_lib_10dp"
    android:paddingRight="@dimen/tool_lib_10dp">

    <ImageView
        android:id="@+id/title_img"
        android:layout_width="@dimen/tool_lib_20dp"
        android:layout_height="@dimen/tool_lib_20dp" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_lib_5dp" />

</LinearLayout>