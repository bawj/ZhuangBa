<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg_success" />

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/tool_lib_12dp"
        android:textColor="@color/tool_lib_gray_222222"
        android:textSize="@dimen/tool_lib_16sp"
        tools:text="@string/registered_success" />

    <Button
        android:id="@+id/btnRegisteredUpdate"
        style="@style/base_btn"
        android:layout_below="@+id/tvTip"
        android:layout_marginLeft="@dimen/tool_lib_38dp"
        android:layout_marginTop="@dimen/tool_lib_16dp"
        android:layout_marginRight="@dimen/tool_lib_38dp"
        tools:text="@string/enter_app" />
</RelativeLayout>