<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/tool_lib_42dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/tool_lib_8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whit_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDialogVersionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tool_lib_16dp"
            android:layout_marginTop="@dimen/tool_lib_26dp"
            android:layout_marginRight="@dimen/tool_lib_16dp"
            android:layout_marginBottom="@dimen/tool_lib_26dp"
            android:gravity="center"
            android:padding="@dimen/tool_lib_12dp"
            android:textColor="@color/tool_lib_gray_222222"
            android:textSize="@dimen/tool_lib_12sp"
            tools:text="发现新版本，是否更新？" />

        <View style="@style/tool_lib_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_lib_43dp">

            <TextView
                android:id="@+id/tvDialogVersionOk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/update_immediately"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_14sp"
                android:textStyle="bold" />

            <View style="@style/tool_lib_vertical_line" />

            <TextView
                android:id="@+id/tvDialogVersionClose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_more_prompts"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_14sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>