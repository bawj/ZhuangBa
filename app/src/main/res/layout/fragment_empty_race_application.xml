<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tool_lib_gray_F5F6FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/tool_lib_16dp"
            android:paddingEnd="@dimen/tool_lib_16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tool_lib_12dp"
                android:text="@string/application_amount"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tool_lib_14dp"
                android:layout_marginBottom="@dimen/tool_lib_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/money"
                    android:textColor="#ffef2b2b"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tvEmptyRaceMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tool_lib_3dp"
                    android:text="@string/zero"
                    android:textColor="@color/tool_lib_red_EF2B2B"
                    android:textSize="@dimen/tool_lib_16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/tool_lib_16dp"
            android:paddingEnd="@dimen/tool_lib_16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tool_lib_12dp"
                android:text="@string/reasons_for_application"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_16sp" />

            <EditText
                android:id="@+id/editFiledDescription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tool_lib_110dp"
                android:layout_marginTop="@dimen/tool_lib_10dp"
                android:layout_marginBottom="@dimen/tool_lib_10dp"
                android:background="@drawable/gray_field_description_bg"
                android:ellipsize="end"
                android:gravity="start"
                android:hint="@string/please_input_reasons_for_application"
                android:maxLength="125"
                android:padding="@dimen/tool_lib_8dp"
                android:textSize="@dimen/tool_lib_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/tool_lib_16dp"
            android:paddingEnd="@dimen/tool_lib_16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tool_lib_12dp"
                android:text="@string/re_appointment_time"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_16sp" />


            <TextView
                android:id="@+id/tvReAppointmentTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tool_lib_40dp"
                android:layout_marginTop="@dimen/tool_lib_10dp"
                android:layout_marginBottom="@dimen/tool_lib_10dp"
                android:background="@drawable/gray_field_description_bg"
                android:drawableEnd="@drawable/ic_down"
                android:drawablePadding="@dimen/tool_lib_12dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/please_check_time"
                android:maxLength="125"
                android:padding="@dimen/tool_lib_8dp"
                android:textSize="@dimen/tool_lib_12sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_lib_56dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <com.qmuiteam.qmui.layout.QMUIButton
            android:id="@+id/btnConstructionSubmission"
            style="@style/base_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_lib_40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/tool_lib_16dp"
            android:layout_marginEnd="@dimen/tool_lib_16dp"
            android:text="@string/construction_submission" />

    </RelativeLayout>
</RelativeLayout>