<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/tool_lib_5dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="@dimen/tool_lib_169dp"
        android:layout_height="@dimen/tool_lib_112dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDataDetailsContentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tool_lib_30dp"
            android:layout_marginLeft="@dimen/tool_lib_30dp"
            android:textColor="@color/tool_lib_gray_222222"
            android:textSize="@dimen/tool_lib_26sp"
            tools:text="1000" />

        <TextView
            android:id="@+id/tvDataDetailsContentExplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tool_lib_30dp"
            android:layout_marginLeft="@dimen/tool_lib_30dp"
            android:textColor="@color/tool_lib_gray_777777"
            android:textSize="@dimen/tool_lib_14sp"
            tools:text="已发布订单" />

    </LinearLayout>

</android.support.v7.widget.CardView>
