<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_alipay_account" />

    <include layout="@layout/item_alipay_empty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_lib_5dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/tool_lib_16dp"
        android:paddingRight="@dimen/tool_lib_16dp">

        <TextView
            style="@style/text_12_222222"
            android:layout_marginTop="@dimen/tool_lib_12dp"
            android:text="@string/wallet_withdraw_money" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/tool_lib_30dp">

            <TextView
                style="@style/text_18_222222"
                android:text="Â¥" />

            <EditText
                android:id="@+id/edit_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tool_lib_20dp"
                android:layout_marginLeft="@dimen/tool_lib_20dp"
                android:background="@color/tool_lib_alpha"
                android:hint="@string/wallet_withdraw_input"
                android:textColor="@color/tool_lib_gray_222222"
                android:textColorHint="@color/tool_lib_gray_B1B1B1"
                android:textSize="@dimen/tool_lib_18sp" />

        </LinearLayout>

        <View
            style="@style/tool_lib_horizontal_line"
            android:layout_marginTop="@dimen/tool_lib_10dp" />

        <TextView
            android:id="@+id/tv_withdraw_hint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_lib_37dp"
            android:gravity="center_vertical"
            android:text="@string/wallet_withdraw_money_hint"
            android:textColor="@color/tool_lib_gray_777777"
            android:textSize="@dimen/tool_lib_10sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_withdraw"
        style="@style/text_14_ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_lib_46dp"
        android:layout_marginLeft="@dimen/tool_lib_16dp"
        android:layout_marginTop="@dimen/tool_lib_30dp"
        android:layout_marginRight="@dimen/tool_lib_16dp"
        android:background="@drawable/login_login_btn"
        android:gravity="center"
        android:text="@string/wallet_withdraw_btn" />
</LinearLayout>