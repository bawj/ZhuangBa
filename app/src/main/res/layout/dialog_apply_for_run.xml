<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/tool_lib_42dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/tool_lib_8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProblemFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/tool_lib_16dp"
            android:layout_marginTop="@dimen/tool_lib_12dp"
            android:text="@string/empty_race_application"
            android:textColor="@color/tool_lib_gray_222222"
            android:textSize="@dimen/tool_lib_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tool_lib_16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/application_amount_"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_12sp" />

            <TextView
                android:id="@+id/tvApplicationAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tool_lib_red_EF2B2B"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="Â¥2000" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvDialogContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_lib_128dp"
            android:layout_marginLeft="@dimen/tool_lib_16dp"
            android:layout_marginTop="@dimen/tool_lib_6dp"
            android:layout_marginRight="@dimen/tool_lib_16dp"
            android:layout_marginBottom="@dimen/tool_lib_10dp"
            android:background="@drawable/gray_scope_of_ervice_bg"
            android:gravity="start"
            android:maxLength="50"
            android:padding="@dimen/tool_lib_5dp"
            android:textColor="@color/tool_lib_gray_222222"
            android:textSize="@dimen/tool_lib_12sp"
            tools:text="@string/reasons_for_application" />

        <TextView
            android:id="@+id/tvReAppointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tool_lib_12dp"
            android:layout_marginStart="@dimen/tool_lib_16dp"
            android:text="@string/re_appointment_time_"
            android:textColor="@color/tool_lib_gray_222222"
            android:textSize="@dimen/tool_lib_12sp" />

        <View
            style="@style/tool_lib_horizontal_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_lib_43dp">

            <TextView
                android:id="@+id/tvDialogOk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/application_for_approval"
                android:textColor="@color/tool_lib_color_3AB960"
                android:textSize="@dimen/tool_lib_14sp" />

            <View style="@style/tool_lib_vertical_line" />

            <TextView
                android:id="@+id/tvDialogClose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/application_failed"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_14sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>