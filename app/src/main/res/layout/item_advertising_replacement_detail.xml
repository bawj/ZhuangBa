<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/tool_lib_5dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tool_lib_12dp"
        android:layout_marginLeft="@dimen/tool_lib_12dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_10dp">

            <TextView
                android:id="@+id/tvEquipmentNumber_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/tool_lib_3dp"
                android:layout_marginLeft="@dimen/tool_lib_3dp"
                android:text="@string/equipment_number"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp" />

            <TextView
                android:id="@+id/tvEquipmentNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tvItemAdvertisingReplacementType"
                android:layout_toLeftOf="@+id/tvItemAdvertisingReplacementType"
                android:layout_toEndOf="@+id/tvEquipmentNumber_"
                android:layout_toRightOf="@+id/tvEquipmentNumber_"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="KDKDFJFJ" />

            <TextView
                android:id="@+id/tvItemAdvertisingReplacementType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/distribution_half_fillet_bg"
                android:padding="@dimen/tool_lib_5dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="进行中" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tool_lib_3dp"
                android:layout_marginLeft="@dimen/tool_lib_3dp"
                android:text="@string/change_places"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp" />

            <TextView
                android:id="@+id/tvChangePlaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="A面" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tool_lib_3dp"
                android:layout_marginLeft="@dimen/tool_lib_3dp"
                android:text="@string/order_number"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp" />

            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tool_lib_12dp"
                android:layout_marginLeft="@dimen/tool_lib_12dp"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="7266473746778273" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_10dp">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tool_lib_3dp"
                android:layout_marginLeft="@dimen/tool_lib_3dp"
                android:text="@string/replacement_positioning"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp" />

            <TextView
                android:id="@+id/tvPositioning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="杭州西湖区毁人家园一栋一单元一号电梯" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tool_lib_10dp"
            android:layout_marginBottom="@dimen/tool_lib_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tool_lib_3dp"
                android:layout_marginLeft="@dimen/tool_lib_3dp"
                android:text="@string/date_of_appointment_"
                android:textColor="@color/tool_lib_gray_777777"
                android:textSize="@dimen/tool_lib_12sp" />

            <TextView
                android:id="@+id/tvDateAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tool_lib_gray_222222"
                android:textSize="@dimen/tool_lib_12sp"
                tools:text="2019/01/24 13:20:01 ～ 2019/01/24 13:20:01" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>